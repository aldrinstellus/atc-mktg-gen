# ATC Marketing Asset Generator - Environment Variables

# Google AI (Gemini)
GOOGLE_API_KEY=your_gemini_api_key_here

# Google Drive API
# Option 1: Service Account (recommended for Cloud Run)
GOOGLE_SERVICE_ACCOUNT_JSON=path/to/service-account.json

# Option 2: OAuth (for local development)
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret

# Google Drive Settings
GOOGLE_DRIVE_ROOT_FOLDER_ID=your_root_folder_id
# This is the ID of "/ATC-Marketing/" folder in Google Drive

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000

# Streamlit Settings
STREAMLIT_PORT=8501
